rootProject.name = '${projectName.groovyString}'

// Declare a source control configuration to the official Google Test repository
sourceControl {
    gitRepository("https://github.com/google/googletest") {
        producesModule("com.github.google.googletest:gtest")
        producesModule("com.github.google.googletest:gtest_main")
        plugins {
            // Inject cmake-build-adapter plugins to automatically discover and expose all artifacts
            id 'dev.nokee.cmake-build-adapter'
        }
    }
}
